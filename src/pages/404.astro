---
import Layout from '../layouts/Base.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
---
<Layout title='404 page not found :('>
  <Header class:list={{ position: 'absolute' }} />
  <main class='pb-16'>
    <div class="grid h-screen px-4 bg-white place-content-center relative">
      <div class="flex items-center justify-center flex-col">
        <img src='/svg/404.svg' class="font-black text-gray-200 w-full md:w-1/2 drop-shadow select-none" />

        <p class="text-2xl font-Thirsty tracking-tight text-gray-900 sm:text-7xl">
          Uh-oh!
        </p>

        <h1 class="font-GilroyBold uppercase text-3xl lg:text-5xl text-[#deb887] mb-6">You seem to be lost!</h1>
        <p class='text-gray-700 font-GilroyRegular text-lg'>The page you're looking for isn't available.</p>
        <p class='text-gray-700 font-GilroyRegular text-lg'>Try searching again or use the Go Back button below.</p>

        <a href="/"
          class="inline-block px-5 py-3 mt-4 text-lg font-GilroySemibold text-white bg-[#deb887] rounded hover:bg-[#dcc182] focus:outline-none focus:ring">
          ‚Üê Go Back Home
        </a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>